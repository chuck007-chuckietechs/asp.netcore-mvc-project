@model NBDPrototype.Models.Item

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Item</h2>
<br />
<hr />
<div class="row">
    <div class="border container" style="padding:30px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Code" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Code" class="form-control" />
                </div>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ItemTypeId" class="control-label"></label>
                </div>
                <div class="col-6">
                    <select asp-for="ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypeId"></select>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Description" class="form-control" />
                </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Size" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Size" class="form-control" />
                </div>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Price" class="form-control" />
                </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
             </div>
                <div class="form-group row">
                    <div class="col-3 offset-3">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-3">
                        <a asp-action="Index" class="btn btn-success form-control">
                            <i class="fas fa-sign-out-alt"></i>
                            Back to List
                        </a>
                    </div>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
