@model NBDPrototype.Models.BidItem

@{
    ViewData["Title"] = "Add Item";
}


<h2></h2>
<hr />
<form asp-action="Add">
    <input type="hidden" name="BidId" value="@Model.BidId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ItemId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId">
                        <option value="">Select an Item</option>
                    </select>
                </div>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidItemQuantity" class="control-label"></label>
                <input asp-for="BidItemQuantity" class="form-control" type="number" min="0" />
                <span asp-validation-for="BidItemQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    <a href='@ViewData["returnURL"]'>Back to Bid</a>
</div>